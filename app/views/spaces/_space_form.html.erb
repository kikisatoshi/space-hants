<div class="spacebox">
  <h2 class="spacebox-title">スペース情報を入力</h2>
  <div class="spacebox-inner">
    <%= form_for(@space) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="form-group">
        <%= f.text_area :address, class: "form-control", readonly: true %>
      </div>
      <div class="form-group">
        <%= f.text_field :title, class: "form-control",
            placeholder: t('.title', :default => "Title") %>
      </div>
      <div class="form-group">
        <%= f.text_area :description, class: "form-control",
            placeholder: t('.description', :default => "Description") %>
      </div>
      <div class="radio">
        <%= t('.category', :default => "Category") %><br>
        <label>
          <%= f.radio_button(:category, "cafe") %>
          <%= f.label :category, 'カフェ', :value => "cafe" %>
        </label><br>
        <label>
          <%= f.radio_button(:category, "library") %>
          <%= f.label :category, '図書館', :value => "library" %>
        </label><br>
        <label>
          <%= f.radio_button(:category, "original") %>
          <%= f.label :category, 'オリジナルスペース', :value => "original" %>
        </label><br>
      </div>
      <div class="submit-group">
        <%= f.submit t('.spacehant', :default => "Hant this space"), class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>

<% if params[:type] == "Favorite" %>
  $("#favorite_form_<%= @space.id %>").html("<%= escape_javascript(render('spaces/ownerforms/favorite', space: @space)) %>");
  $("#favorite-count-<%= @space.id %>").replaceWith("<%= escape_javascript(render('spaces/ownerforms/favorite_count', space: @space)) %>");
<% else %>
  $("#report_form_<%= @space.id %>").html("<%= escape_javascript(render('spaces/ownerforms/report', space: @space)) %>");
<% end %>

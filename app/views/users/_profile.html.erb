<div class="user-profile">
  <div class="user-profile-box row">
    <div class="icon col-xs-2">
      <% if user==current_user %>
        <%= link_to gravatar_for(user, size: 100), edit_user_registration_path %>
      <% else %>
        <%= gravatar_for user, size: 100 %>
      <% end %>
    </div>
    <div class="profile-inner-box col-xs-10">
      <div class="name">
        <h2><%= user.name %><h2>
      </div>
      <div class="hometown">
        <h5>
          <span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>
          <%= user.hometown %>
        <h5>
      </div>
      <div class="profile">
        <article><%= simple_format(h user.profile) %></article>
      </div>
    </div>
  </div>
  <div class="status">
    <ul>
      <li>
        <div class="status-label">
          <%= link_to t('.space'), user, remote: true, style: "color:#777;" %>
        </div>
        <div id="space_count" class="status-value">
          <%= user.spaces.count %>
        </div>
      </li>
      <li>
        <div class="status-label">
          <%= link_to t('.review'), user_url(user, type: "Review"), remote: true, style: "color:#777;" %>
        </div>
        <div id="hant_count" class="status-value">
          <%= user.hants.count %>
        </div>
      </li>
      <li>
        <div class="status-label">
          <%= link_to t('.favorite'), user_url(user, type: "Favorite"), remote: true, style: "color:#777;" %>
        </div>
        <div id="favorite_count" class="status-value">
          <%= user.favorites.count %>
        </div>
      </li>
    </ul>
  </div>
</div>

<script>
$().ready(function() {
  $('article').readmore({
      speed: 100,
      collapsedHeight: 70,
      heightMargin: 20,
      moreLink: '<a href="#"><%= t('js.more', :default => 'More') %></a>',
      lessLink: '<a href="#"><%= t('js.hide', :default => 'Hide') %></a>',
  });
});
</script>

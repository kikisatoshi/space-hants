<% content_for :head do %>
  <title><%= t('.sign_in', :default => "Sign in") %> - SpaceHants</title>
  <meta name="description" content="SpaceHantsのログインページ。ログインできます。">
  <meta name="keywords" content="SpaceHants,Sign in">
<% end %>

<div class="box">
  <h2 class="box-title"><%= t('.sign_in', :default => "Sign in") %></h2>
  <div class="box-inner">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, class: "form-control", autofocus: true, placeholder: t('.email', :default => "Email") %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: "form-control", placeholder: t('.password', :default => "Password") %>
      </div>
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
          <label>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </label>
        </div>
      <% end -%>
      <div class="submit-group">
        <%= f.submit t('.sign_in', :default => "Sign in"), class: "btn btn-success" %>
      </div>
      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>

<% content_for :head do %>
  <title><%= t('.forgot_your_password', :default => 'Forgot your password?') %> - SpaceHants</title>
  <meta name="description" content="SpaceHantsのパスワード確認ページ。パスワードを確認できます。">
  <meta name="keywords" content="SpaceHants,Password">
<% end %>

<div class="box">
  <h2 class="box-title"><%= t('.forgot_your_password', :default => 'Forgot your password?') %></h2>
  <div class="box-inner">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="form-group">
        <%= f.text_field :email, class: "form-control", autofocus: true, 
            placeholder: t('.email', :default => "Email") %>
      </div>
      <div class="submit-group">
        <%= f.submit t('.send_me_reset_password_instructions', :default => "Send me reset password instructions"),
            class: "btn btn-success" %>
      </div>
      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>

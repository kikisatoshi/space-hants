<div class="box">
  <h2 class="box-title"><%= t('.sign_up', :default => "Sign up") %></h2>
  <div class="box-inner">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="form-group">
        <%= f.text_field :name, class: "form-control", autofocus: true, placeholder: t('.name', :default => "Name") %>
      </div>
      <div class="form-group">
        <%= f.text_field :email, class: "form-control", placeholder: t('.email', :default => "Email") %>
      </div>
      <div class="form-group">
        <% minimum_password_length = @minimum_password_length %>
        <%= f.password_field :password, class: "form-control",
            placeholder: t('.password', :resource => minimum_password_length,
            :default => "Password(more than #{minimum_password_length} characters)") %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, class: "form-control",
            placeholder: t('.password_confirmation', :default => "Password Confirmation") %>
      </div>
      <div class="submit-group">
        <%= f.submit t('.do_sign_up', :default => "Sign up"), class: "btn btn-success" %>
      </div>
      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>

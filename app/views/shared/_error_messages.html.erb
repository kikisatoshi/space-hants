<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <% if locale == :ja %>
        <%= object.errors.count %>個のエラーがあります。
      <% elsif  locale == :en %>
        The form contains <%= pluralize(object.errors.count, "error") %>
      <% end %>
    </div>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
    <br>
  </div>
<% end %>
